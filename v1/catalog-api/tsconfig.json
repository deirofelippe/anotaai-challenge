{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./build",
    "paths": {
      "@repositories/*": ["./src/repositories/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@tests/*": ["./__tests__/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
